<h1>Create guest post</h1>

{{#if validationErrors.length}}
	<p>Errors:</p>
	<ul>
		{{#each validationErrors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}




<form method="POST" class="container">
    <div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Post name</label>
            <input class="form-control" name="guestName" value="{{name}}" id="exampleFormControltitle" placeholder="Write Your name here...">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Subject</label>
            <input class="form-control" name="guestSubject" value="{{subject}}" id="exampleFormControlSubject" placeholder="Write subject here...">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Comment</label>
            <textarea value="{{comment}}" name="guestComment" class="form-control"  id="exampleFormControlTextarea1" placeholder="write comment here..." rows="3"></textarea>
        </div>
        <div>
            <button type="submit" value="create post" class="btn btn-primary">Create</button>
        </div>
        <hr>
            <a href="/guestbook" class="btn btn-primary">See posts</a>

    </div>
</form>